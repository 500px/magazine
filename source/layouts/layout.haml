!!!
%html
  %head
    %meta{:charset => "utf-8"}/
    %link{:href => "/favicon.ico", :rel => "shortcut icon"}/
    / Always force latest IE rendering engine or request Chrome Frame
    %meta{:content => "IE=edge,chrome=1", "http-equiv" => "X-UA-Compatible"}/
    %meta{:name => "viewport", :content => "width=device-width, initial-scale=1, maximum-scale=1"}/
    %meta{:name => "description", :content => current_page.data.description }
    %meta{property: "og:type", content: "website"}
    %meta{property: "og:title", :content => current_page.data.title }
    %meta{property: "og:description", :content => current_page.data.description }
    %meta{property: "og:url", content: "http://pixelsmag.com"}
    %meta{property: "og:image", content: "http://pixelsmag.com/images/og.jpg"}
    %meta{property: "og:image:type", content: "image/jpeg"}

    %meta{:content => "summary_large_image", :name => "twitter:card"}/
    %meta{:content => "@500px", :name => "twitter:site"}/
    %meta{:content => "@500px", :name => "twitter:creator"}/
    %meta{:content => "Pixels Magazine", :name => "twitter:title"}/
    %meta{:content => "Pixels Magazine is a digital publication that celebrates the wonderful people at 500px. The individual pixels that contributes to our shared mission."}/
    %meta{:content => "http://pixelsmag.com/images/og.jpg", :name => "twitter:image"}/
    %meta{:content => "noindex", :name => "robots"}/

    %title= current_page.data.title
    %script(type="text/javascript" src="https://code.jquery.com/jquery-2.1.1.min.js")
    :javascript
      (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
      (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
      m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
      })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

      ga('create', 'UA-42963572-3', 'auto');
      ga('send', 'pageview');

    / Use page specific stylesheet
    / = stylesheet_link_tag (data.page.stylesheet ? data.page.stylesheet : {})

    %link{:href => "//cloud.typography.com/7645894/6836952/css/fonts.css", :rel => "stylesheet", :type => "text/css"}/
    = stylesheet_link_tag "styles"
    %script{:src => "https://cdnjs.cloudflare.com/ajax/libs/jquery.imagesloaded/3.0.4/jquery.imagesloaded.min.js", :type => "text/javascript"}
    %script{:src => "https://cdnjs.cloudflare.com/ajax/libs/masonry/3.2.2/masonry.pkgd.min.js", :type => "text/javascript"}
    = javascript_include_tag  "jquery.smoothState.min", "hammer.min", "app"

  %body{:class => page_classes}
    = yield
